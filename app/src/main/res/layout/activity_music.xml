<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/raw_sienna"
    tools:context=".music">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="414dp"
        android:layout_height="45dp"
        android:background="@color/deepDumpling"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_navigation"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="44dp"
        android:layout_height="38dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/icon_home"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_nav"
        app:layout_constraintStart_toStartOf="@+id/bottom_nav"
        app:layout_constraintTop_toTopOf="@+id/bottom_nav" />

    <Button
        android:id="@+id/button3"
        android:layout_width="44dp"
        android:layout_height="38dp"
        android:layout_marginStart="56dp"
        android:background="@drawable/icon_music_active"
        app:layout_constraintBottom_toBottomOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button5"
        android:layout_width="44dp"
        android:layout_height="38dp"
        android:layout_marginStart="56dp"
        android:background="@drawable/icon_test"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button3" />

    <Button
        android:id="@+id/button6"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:layout_marginStart="56dp"
        android:background="@drawable/icon_jurnal"
        app:layout_constraintBottom_toBottomOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toTopOf="@+id/button5"
        app:layout_constraintVertical_bias="0.0" />


    <!-- here goes music list -->

    <!--    short -->

    <ImageView
        android:id="@+id/image_list_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/music_list" />

    <ImageView
        android:id="@+id/image_short"
        android:layout_width="64dp"
        android:layout_height="74dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_list_short"
        app:layout_constraintStart_toStartOf="@+id/image_list_short"
        app:layout_constraintTop_toTopOf="@+id/image_list_short"
        app:srcCompat="@drawable/img_short" />

    <TextView
        android:id="@+id/title_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Short"
        android:textColor="@color/midnight_green"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image_short"
        app:layout_constraintTop_toTopOf="@+id/image_list_short" />

    <TextView
        android:id="@+id/desc_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/short_desc"
        android:textColor="@color/midnight_green"
        app:layout_constraintStart_toEndOf="@+id/image_short"
        app:layout_constraintTop_toBottomOf="@+id/title_short" />

    <!--    luluby -->

    <ImageView
        android:id="@+id/image_list_luluby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_list_short"
        app:srcCompat="@drawable/music_list" />

    <ImageView
        android:id="@+id/image_luluby"
        android:layout_width="64dp"
        android:layout_height="74dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_list_luluby"
        app:layout_constraintStart_toStartOf="@+id/image_list_luluby"
        app:layout_constraintTop_toTopOf="@+id/image_list_luluby"
        app:srcCompat="@drawable/img_luluby" />

    <TextView
        android:id="@+id/title_luluby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Luluby"
        android:textColor="@color/midnight_green"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image_luluby"
        app:layout_constraintTop_toTopOf="@+id/image_list_luluby" />

    <TextView
        android:id="@+id/desc_luluby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/luluby_desc"
        android:textColor="@color/midnight_green"
        app:layout_constraintStart_toEndOf="@+id/image_luluby"
        app:layout_constraintTop_toBottomOf="@+id/title_luluby" />

    <!--    stop smoking -->

    <ImageView
        android:id="@+id/image_list_smoking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_list_luluby"
        app:srcCompat="@drawable/music_list" />

    <ImageView
        android:id="@+id/image_smoking"
        android:layout_width="64dp"
        android:layout_height="74dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_list_smoking"
        app:layout_constraintStart_toStartOf="@+id/image_list_smoking"
        app:layout_constraintTop_toTopOf="@+id/image_list_smoking"
        app:srcCompat="@drawable/img_stop_smoking" />

    <TextView
        android:id="@+id/title_smoking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Stop Smoking"
        android:textColor="@color/midnight_green"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image_smoking"
        app:layout_constraintTop_toTopOf="@+id/image_list_smoking" />

    <TextView
        android:id="@+id/desc_smoking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/smoking_desc"
        android:textColor="@color/midnight_green"
        app:layout_constraintStart_toEndOf="@+id/image_smoking"
        app:layout_constraintTop_toBottomOf="@+id/title_smoking" />

    <!--    stay positive -->

    <ImageView
        android:id="@+id/image_list_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_list_smoking"
        app:srcCompat="@drawable/music_list" />

    <ImageView
        android:id="@+id/image_positive"
        android:layout_width="64dp"
        android:layout_height="74dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_list_positive"
        app:layout_constraintStart_toStartOf="@+id/image_list_positive"
        app:layout_constraintTop_toTopOf="@+id/image_list_positive"
        app:srcCompat="@drawable/img_stay_positive" />

    <TextView
        android:id="@+id/title_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Stay Positive"
        android:textColor="@color/midnight_green"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image_positive"
        app:layout_constraintTop_toTopOf="@+id/image_list_positive" />

    <TextView
        android:id="@+id/desc_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/positive_desc"
        android:textColor="@color/midnight_green"
        app:layout_constraintStart_toEndOf="@+id/image_positive"
        app:layout_constraintTop_toBottomOf="@+id/title_positive" />

    <!--   feeling good for life -->

    <ImageView
        android:id="@+id/image_list_feeling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_list_positive"
        app:srcCompat="@drawable/music_list" />

    <ImageView
        android:id="@+id/image_feeling"
        android:layout_width="64dp"
        android:layout_height="74dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_list_feeling"
        app:layout_constraintStart_toStartOf="@+id/image_list_feeling"
        app:layout_constraintTop_toTopOf="@+id/image_list_feeling"
        app:srcCompat="@drawable/img_feel_good" />

    <TextView
        android:id="@+id/title_feeling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Feeling Food for Life"
        android:textColor="@color/midnight_green"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image_feeling"
        app:layout_constraintTop_toTopOf="@+id/image_list_feeling" />

    <TextView
        android:id="@+id/desc_feeling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/feeling_desc"
        android:textColor="@color/midnight_green"
        app:layout_constraintStart_toEndOf="@+id/image_feeling"
        app:layout_constraintTop_toBottomOf="@+id/title_feeling" />


</androidx.constraintlayout.widget.ConstraintLayout>