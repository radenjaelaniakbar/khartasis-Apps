<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/raw_sienna"
    tools:context=".music">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="414dp"
        android:layout_height="45dp"
        android:background="@color/deepDumpling"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/icon_back"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:translationZ="1dp"
        android:background="@drawable/bottom_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/home"
        android:layout_width="44dp"
        android:layout_height="38dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/icon_home"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_nav"
        app:layout_constraintStart_toStartOf="@+id/bottom_nav"
        app:layout_constraintTop_toTopOf="@+id/bottom_nav" />

    <Button
        android:id="@+id/music"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/icon_music_active"
        app:layout_constraintBottom_toBottomOf="@+id/home"
        app:layout_constraintStart_toEndOf="@+id/home"
        app:layout_constraintTop_toTopOf="@+id/home" />

    <Button
        android:id="@+id/test"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/icon_test"
        app:layout_constraintBottom_toBottomOf="@+id/music"
        app:layout_constraintStart_toEndOf="@+id/music"
        app:layout_constraintTop_toTopOf="@+id/music" />

    <Button
        android:id="@+id/jurnal"
        android:layout_width="32dp"
        android:layout_height="38dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/icon_jurnal"
        app:layout_constraintBottom_toBottomOf="@+id/test"
        app:layout_constraintStart_toEndOf="@+id/test"
        app:layout_constraintTop_toTopOf="@+id/test" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:text="Stay Positive"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <ImageView
        android:id="@+id/img_bgmusic"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/img_bgmusic" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="@string/positive_desc"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="174dp"
        android:layout_height="174dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/img_stay_positive" />

    <!--   restfull night -->
    <ImageView
        android:id="@+id/luluby_restfull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_bgmusic"
        app:srcCompat="@drawable/music_list2" />

    <Button
        android:id="@+id/btn_restfull"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/icon_play"
        app:layout_constraintBottom_toBottomOf="@+id/luluby_restfull"
        app:layout_constraintStart_toStartOf="@+id/luluby_restfull"
        app:layout_constraintTop_toTopOf="@+id/luluby_restfull" />


    <TextView
        android:id="@+id/title_restfull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Restfull Night"
        android:textColor="@color/midnight_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/luluby_restfull"
        app:layout_constraintStart_toEndOf="@+id/btn_restfull"
        app:layout_constraintTop_toTopOf="@+id/luluby_restfull" />

    <TextView
        android:id="@+id/time_restfull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="2:30"
        android:textColor="@color/midnight_green"
        app:layout_constraintBottom_toBottomOf="@+id/title_restfull"
        app:layout_constraintEnd_toEndOf="@+id/luluby_restfull"
        app:layout_constraintTop_toTopOf="@+id/title_restfull" />

    <!--    positive vibes-->
    <ImageView
        android:id="@+id/luluby_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luluby_restfull"
        app:srcCompat="@drawable/music_list2" />

    <Button
        android:id="@+id/btn_positive"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/icon_play"
        app:layout_constraintBottom_toBottomOf="@+id/luluby_positive"
        app:layout_constraintStart_toStartOf="@+id/luluby_positive"
        app:layout_constraintTop_toTopOf="@+id/luluby_positive" />


    <TextView
        android:id="@+id/title_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Positive Vibes"
        android:textColor="@color/midnight_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/luluby_positive"
        app:layout_constraintStart_toEndOf="@+id/btn_positive"
        app:layout_constraintTop_toTopOf="@+id/luluby_positive" />

    <TextView
        android:id="@+id/time_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="2:30"
        android:textColor="@color/midnight_green"
        app:layout_constraintBottom_toBottomOf="@+id/title_positive"
        app:layout_constraintEnd_toEndOf="@+id/luluby_positive"
        app:layout_constraintTop_toTopOf="@+id/title_positive" />

    <!--    soul-->
    <ImageView
        android:id="@+id/luluby_soul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luluby_positive"
        app:srcCompat="@drawable/music_list2" />

    <Button
        android:id="@+id/btn_soul"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/icon_play"
        app:layout_constraintBottom_toBottomOf="@+id/luluby_soul"
        app:layout_constraintStart_toStartOf="@+id/luluby_soul"
        app:layout_constraintTop_toTopOf="@+id/luluby_soul" />

    <TextView
        android:id="@+id/title_soul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Soul"
        android:textColor="@color/midnight_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/luluby_soul"
        app:layout_constraintStart_toEndOf="@+id/btn_soul"
        app:layout_constraintTop_toTopOf="@+id/luluby_soul" />

    <TextView
        android:id="@+id/time_soul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="2:30"
        android:textColor="@color/midnight_green"
        app:layout_constraintBottom_toBottomOf="@+id/title_soul"
        app:layout_constraintEnd_toEndOf="@+id/luluby_soul"
        app:layout_constraintTop_toTopOf="@+id/title_soul" />

    <!--    good day-->
    <ImageView
        android:id="@+id/luluby_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luluby_soul"
        app:srcCompat="@drawable/music_list2" />

    <Button
        android:id="@+id/btn_good"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/icon_pause"
        app:layout_constraintBottom_toBottomOf="@+id/luluby_good"
        app:layout_constraintStart_toStartOf="@+id/luluby_good"
        app:layout_constraintTop_toTopOf="@+id/luluby_good" />

    <TextView
        android:id="@+id/title_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Good Day"
        android:textColor="@color/midnight_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/luluby_good"
        app:layout_constraintStart_toEndOf="@+id/btn_good"
        app:layout_constraintTop_toTopOf="@+id/luluby_good" />

    <TextView
        android:id="@+id/time_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="2:30"
        android:textColor="@color/midnight_green"
        app:layout_constraintBottom_toBottomOf="@+id/title_good"
        app:layout_constraintEnd_toEndOf="@+id/luluby_good"
        app:layout_constraintTop_toTopOf="@+id/title_good" />

</androidx.constraintlayout.widget.ConstraintLayout>