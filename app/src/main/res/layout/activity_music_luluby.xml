<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/raw_sienna"
    tools:context=".music_luluby">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="414dp"
        android:layout_height="45dp"
        android:background="@color/deepDumpling"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/icon_back"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:translationZ="1dp"
        android:background="@drawable/bottom_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/home"
        android:layout_width="44dp"
        android:layout_height="38dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/icon_home"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_nav"
        app:layout_constraintStart_toStartOf="@+id/bottom_nav"
        app:layout_constraintTop_toTopOf="@+id/bottom_nav" />

    <Button
        android:id="@+id/music"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/icon_music_active"
        app:layout_constraintBottom_toBottomOf="@+id/home"
        app:layout_constraintStart_toEndOf="@+id/home"
        app:layout_constraintTop_toTopOf="@+id/home" />

    <Button
        android:id="@+id/test"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/icon_test"
        app:layout_constraintBottom_toBottomOf="@+id/music"
        app:layout_constraintStart_toEndOf="@+id/music"
        app:layout_constraintTop_toTopOf="@+id/music" />

    <Button
        android:id="@+id/jurnal"
        android:layout_width="32dp"
        android:layout_height="38dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/icon_jurnal"
        app:layout_constraintBottom_toBottomOf="@+id/test"
        app:layout_constraintStart_toEndOf="@+id/test"
        app:layout_constraintTop_toTopOf="@+id/test" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:text="Luluby"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="@string/luluby_desc"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


    <!--    bg music list-->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="174dp"
        android:layout_height="174dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/img_luluby" />

    <ImageView
        android:id="@+id/img_bgmusic"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/img_bgmusic" />

    <!--    heavy rainly -->
    <ImageView
        android:id="@+id/luluby_heavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_bgmusic"
        app:srcCompat="@drawable/music_list2" />

    <Button
        android:id="@+id/btn_heavy"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/icon_play"
        app:layout_constraintBottom_toBottomOf="@+id/luluby_heavy"
        app:layout_constraintStart_toStartOf="@+id/luluby_heavy"
        app:layout_constraintTop_toTopOf="@+id/luluby_heavy" />


    <TextView
        android:id="@+id/title_heavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Heavy Rainly"
        android:textColor="@color/midnight_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/luluby_heavy"
        app:layout_constraintStart_toEndOf="@+id/btn_heavy"
        app:layout_constraintTop_toTopOf="@+id/luluby_heavy" />

    <TextView
        android:id="@+id/time_heavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="2:30"
        android:textColor="@color/midnight_green"
        app:layout_constraintBottom_toBottomOf="@+id/title_heavy"
        app:layout_constraintEnd_toEndOf="@+id/luluby_heavy"
        app:layout_constraintTop_toTopOf="@+id/title_heavy" />

    <!--    sleep soundly-->
    <ImageView
        android:id="@+id/luluby_soundly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luluby_heavy"
        app:srcCompat="@drawable/music_list2" />

    <Button
        android:id="@+id/btn_soundly"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/icon_play"
        app:layout_constraintBottom_toBottomOf="@+id/luluby_soundly"
        app:layout_constraintStart_toStartOf="@+id/luluby_soundly"
        app:layout_constraintTop_toTopOf="@+id/luluby_soundly" />


    <TextView
        android:id="@+id/title_soundly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Sleep Soundly"
        android:textColor="@color/midnight_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/luluby_soundly"
        app:layout_constraintStart_toEndOf="@+id/btn_soundly"
        app:layout_constraintTop_toTopOf="@+id/luluby_soundly" />

    <TextView
        android:id="@+id/time_soundly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="2:30"
        android:textColor="@color/midnight_green"
        app:layout_constraintBottom_toBottomOf="@+id/title_soundly"
        app:layout_constraintEnd_toEndOf="@+id/luluby_soundly"
        app:layout_constraintTop_toTopOf="@+id/title_soundly" />

    <!--    Rainly-->
    <ImageView
        android:id="@+id/luluby_rainly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luluby_soundly"
        app:srcCompat="@drawable/music_list2" />

    <Button
        android:id="@+id/btn_rainly"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/icon_play"
        app:layout_constraintBottom_toBottomOf="@+id/luluby_rainly"
        app:layout_constraintStart_toStartOf="@+id/luluby_rainly"
        app:layout_constraintTop_toTopOf="@+id/luluby_rainly" />


    <TextView
        android:id="@+id/title_rainly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Sleep Soundly"
        android:textColor="@color/midnight_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/luluby_rainly"
        app:layout_constraintStart_toEndOf="@+id/btn_rainly"
        app:layout_constraintTop_toTopOf="@+id/luluby_rainly" />

    <TextView
        android:id="@+id/time_rainly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="2:30"
        android:textColor="@color/midnight_green"
        app:layout_constraintBottom_toBottomOf="@+id/title_rainly"
        app:layout_constraintEnd_toEndOf="@+id/luluby_rainly"
        app:layout_constraintTop_toTopOf="@+id/title_rainly" />

    <!--    sleep-->
    <ImageView
        android:id="@+id/luluby_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luluby_rainly"
        app:srcCompat="@drawable/music_list2" />

    <Button
        android:id="@+id/btn_sleep"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/icon_pause"
        app:layout_constraintBottom_toBottomOf="@+id/luluby_sleep"
        app:layout_constraintStart_toStartOf="@+id/luluby_sleep"
        app:layout_constraintTop_toTopOf="@+id/luluby_sleep" />


    <TextView
        android:id="@+id/title_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Deep Sleep"
        android:textColor="@color/midnight_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/luluby_sleep"
        app:layout_constraintStart_toEndOf="@+id/btn_sleep"
        app:layout_constraintTop_toTopOf="@+id/luluby_sleep" />

    <TextView
        android:id="@+id/time_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="2:30"
        android:textColor="@color/midnight_green"
        app:layout_constraintBottom_toBottomOf="@+id/title_sleep"
        app:layout_constraintEnd_toEndOf="@+id/luluby_sleep"
        app:layout_constraintTop_toTopOf="@+id/title_sleep" />

</androidx.constraintlayout.widget.ConstraintLayout>